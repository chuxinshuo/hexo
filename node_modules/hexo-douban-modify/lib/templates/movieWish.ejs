<div class="bmdb-list">
    <ul class="bmdb-ul">
        <li class="bmdb-li">
            <a target="_blank" href="<%= item.alt %>" class="bmdb-link">
                <div class="bmdb-cover">
                    <img class="bmdb-cover-image" src="<%= root %>" data-src="<%= item.image %>" srcset=" " alt="<%= item.title %>" width="150" height="220" referrerPolicy="no-referrer" />
                </div>               
                <div class="bmdb-info">
                    <div class="bmdb-title"><%= item.title %></div>
                     <div class="hexo-douban-meta"><%= item.recommend %></div>
                     <div class="hexo-douban-comments"> <%= item.comment %></div>
                </div>
             </a>
        </li>
    </ul>
   
</div>
